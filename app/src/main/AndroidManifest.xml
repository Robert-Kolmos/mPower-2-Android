<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sagebionetworks.research.mpower">

    <application
        android:name=".MPowerApplication"
        android:allowBackup="true"
        android:icon="@drawable/mpower2_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mpower2_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PerformTaskActivity">
        </activity>
        <activity android:name=".sageresearch.TappingTaskActivity">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.ExternalIdSignInActivity"
            android:label="@string/title_activity_external_id_sign_in"
            android:theme="@style/MPowerTheme"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>