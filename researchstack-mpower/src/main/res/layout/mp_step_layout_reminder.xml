<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bp_root_instruction_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/rsb_padding_small">

    <ImageView
        android:id="@+id/mp_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"/>

    <include
        android:id="@+id/mp_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/mp_include_title_text_container"/>

    <LinearLayout
        android:id="@+id/rsb_form_step_body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>